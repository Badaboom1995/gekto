    "start": "node dist/proxy.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["ai", "coding", "assistant", "claude", "widget"],
  "license": "MIT",
  "dependencies": {
    "node-pty": "^1.1.0-beta30",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
