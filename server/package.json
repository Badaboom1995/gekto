{
  "name": "gektobot",
  "version": "0.0.5",
  "description": "AI coding assistant widget - inject into any web app",
  "type": "module",
  "bin": {
    "gektobot": "./dist/proxy.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "GEKTO_DEV=1 tsx watch src/proxy.ts",
    "preview": "tsx watch src/proxy.ts",
